<%= form_for(@step, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @step.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@step.errors.count, "error") %> prohibited this step from being saved:</h4>

      <ul>
      <% @step.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# instruction %>
  <div class="form-group">
    <%= f.label :instruction, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :instruction, class: "form-control" %>
    </div>
  </div>


  <%# recipe %>
  <div class="form-group">
    <%= f.label :recipe, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :recipe, class: "form-control" %>
    </div>
  </div>


  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end -%>
